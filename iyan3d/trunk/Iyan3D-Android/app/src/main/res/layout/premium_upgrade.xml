<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="11">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#a800ff"
        android:gravity="center">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="UPGRADE TO PREMIUM"
            android:id="@+id/premium_title"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6.5"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/featurs_premium"
            android:layout_gravity="center_vertical"
            android:textColor="#ffffff"
            android:textSize="15sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="right"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="4.5"
            android:gravity="center" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" >

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:gravity="center" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unlock Once"
                    android:id="@+id/unlock_once"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="15sp" />
                </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/price_text"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="3"
            android:gravity="center">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:gravity="center">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="CANCEL"
                    android:gravity="center"
                    android:background="@drawable/shape_for_more_info"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:id="@+id/premium_cancel"
                    android:textSize="10sp"
                    android:layout_weight="0.5" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:weightSum="1">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="WATCH VIDEO"
                    android:gravity="center"
                    android:background="@drawable/restore_purchase"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:id="@+id/premium_view_ad"
                    android:textSize="10sp"
                    android:layout_weight="0.5" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:gravity="center">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="UPGRADE"
                    android:gravity="center"
                    android:background="@drawable/add_to_scene"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:id="@+id/premium_accept"
                    android:textSize="10sp"
                    android:layout_weight="0.5" />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>